@using Microsoft.AspNetCore.Identity
@using RoomRental.DAL.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
        <a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Cabinet" title="Кабінет">
            Мій кабінет
        </a>
        <button type="submit" class="btn btn-outline-danger">Вийти</button>
    </form>
}
else
{
    <a class="btn btn-outline-secondary me-2" asp-area="Identity" asp-page="/Account/Login">Увійти</a>
    <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Реєстрація</a>
}
