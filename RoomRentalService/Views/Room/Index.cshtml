@model IEnumerable<RoomRental.Models.Room>

@{
    ViewData["Title"] = "Список кімнат";
}

<h2>Список кімнат</h2>

<a asp-action="Create" class="btn btn-success mb-3">Додати кімнату</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Опис</th>
            <th>Ціна за день</th>
            <th>Доступна</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Name</td>
                <td>@room.Description</td>
                <td>@room.PricePerDay.ToString("C")</td>
                <td>@(room.IsAvailable ? "Так" : "Ні")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-sm btn-primary">Редагувати</a>
                    <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-sm btn-danger">Видалити</a>
                    <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-sm btn-info">Деталі</a>
                </td>
            </tr>
        }
    </tbody>
</table>
