@model List<RoomRental.Models.Notification>

@{
    ViewData["Title"] = "Сповіщення";
}

<h2 class="mb-4">Сповіщення</h2>

@if (Model != null && Model.Any())
{
    <ul class="list-group">
        @foreach (var note in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@note.Message</span>
                <small class="text-muted">@note.CreatedAt.ToString("g")</small>
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info">Поки що немає сповіщень.</div>
}

